{
    "manifest_version": 3,
    "name": "Clear History and Cache",
    "version": "1.0",
    "description": "Clear Chrome history and cache based on the number of days.",
    "permissions": ["history", "browsingData"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  